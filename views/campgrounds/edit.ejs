<% layout('layouts/boilerplate') %>


    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form enctype="multipart/form-data" method="POST" novalidate class="needs-validation" action="/campgrounds/<%=campgrounds._id %>?_method=put">
                <div class="md-3">
                   <label class="form-label" for="">Title</label>
                   <input class="form-control" value='<%=campgrounds.title %>' type="text" name="campground[title]" required id="title">
               </div>
               <div class="md-3">
                   <label class="form-label" for="location">Location</label>
                   <input class="form-control" value='<%=campgrounds.location %>' type="text" name="campground[location]" required id="location">
               </div>
               <!-- <div class="md-3">
                   <label class="form-label" for="image">Add Images</label>
                   <input type="file" name="image"  id="image">
               </div> -->

            
       
               <div class="md-3">
                   <label class="form-label" for="price">Campground Price</label>
                   <div class="input-group">
                       <span class="input-group-text" id="basic-addon1">$</span>
                     <input required type="text" value='<%=campgrounds.price %>' name="campground[price]" class="form-control" placeholder="0" aria-label="Price" aria-describedby="basic-addon1">
                 </div>
               </div>
               
               <div class="md-3">
                   <label class="form-label" for="dscription">Description</label>
                   <textarea class="form-control" required type="text" name="campground[description]" id="description"><%= campgrounds.description %></textarea>
               </div>
               <div class="mb-3">
                <label for="image" class="form-label">Choose image</label>
                <input name="image" class="form-control" type="file" id="image" multiple>
              </div>

              <div class="md-3">
                  <% campgrounds.image.map((img, i)=>{ %>
                          <img class="img-thumbnail" src="<%= img.url %>" alt="">
                          <div class="form-check-inline">
                          <label for="image-<%=i%>">Delete?</label>
                          <input id="image-<%=i %>" type="checkbox" name="deleteImage[]" value="<%= img.filename %>">
                        </div>
                    <% }) %>

              </div>


       
               <div class="mt-3">
                   <button class="btn btn-info">Update Campground</button>
               </div> 
           </form>
          
        <a class="btn btn-success" href="/campgrounds/<%= campgrounds._id %>">Back To Campground</a>
        </div>
       </div>





       <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
       </script>