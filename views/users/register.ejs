<% layout('layouts/Boilerplate') %>

<h1>Register</h1>
<form  action="/register" method="POST" novalidate class="needs-validation">

    <div class="md-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username"  name="username" id="username" required >
    </div>
    <div class="md-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="text" id="email"  name="email" id="email" required>
    </div>
    <div class="md-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="text" id="password"  name="password" id="password" required>
    </div>
    <button class="btn btn-success">Register</button>

</form>


